- content_for(:css) do
  = stylesheet_link_tag("reset")
  = stylesheet_link_tag("application")
  = stylesheet_link_tag("forms")

- content_for(:js) do
  = javascript_include_tag('vendor/jquery-1.4.2')
  = javascript_include_tag("vendor/jquery.enumerable")
  = javascript_include_tag('events/new')

%h2 Event Wrapup
%form{:action => '/events/1'}
  %ul
    %li
      %label{:style => 'float: left'} Where?
      %input
    %li{:class => 'who-input'}
      %label Who?
      %input
    %li{:class => 'template'}
      %label
      %input{:placeholder => 'Leave blank if no more', :class => 'no-label'}
    %li
      %label Weather?
      %select
        %option Beautiful
        %option So hot!
        %option Meh
        %option Bit nippy
        %option Needed an extra jumper
        %option Monsoon
    %li
      %label Crowd?
      %select
        %option Packed
        %option Meh
        %option Scarse
    %li
      %label How'd it go?
      %textarea
    %li
      %input{:type => 'submit', :value => 'Next', :class => 'no-label'}

